@model serie_fibonacci.Models.Fibonacci

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>


<div class="container gridBgcrear">
    <h3 class="text-danger" >¿Está usted seguro de que quiere eliminar este elemento?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.Name) *@
            <label>Nombre:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <label>Fecha:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            <label>Primer Numero:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstNum)
        </dd>
        <dt class="col-sm-2">
            <label>Segundo Numero:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecondNum)
        </dd>
        <dt class="col-sm-2">
            <label>Suma Total:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SumTotal)
        </dd>
        <dt class="col-sm-2">
            <label>Serie de Numeros:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Serie)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success">Volver a la lista</a>
    </form>
</div>
