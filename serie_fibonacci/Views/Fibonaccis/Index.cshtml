@model IEnumerable<serie_fibonacci.Models.Fibonacci>

@{
    ViewData["Title"] = "Index";
}

<h1>Historial de Ejecuciones</h1>

<form class="container row" >
    <a class="btn btn-success col" asp-action="Calcular">Calcular Nueva Serie</a>
    <div class="col-8"></div>
    <div class="dropdown show col">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Filtrar por..
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" asp-action="FiltrarAsc" asp-controller="Fibonaccis" method="get">Fecha Ascendente</a>
            <a class="dropdown-item" asp-action="FiltrarDesc" asp-controller="Fibonaccis" method="get">Fecha Descendente</a>
            <a class="dropdown-item" asp-action="FiltrarSumDesc" asp-controller="Fibonaccis" method="get">Suma total Descendente</a>
            <a class="dropdown-item" asp-action="FiltrarSumaAsc" asp-controller="Fibonaccis" method="get">Suma total Ascendente</a>
            
        </div>
    </div>
</form>
<div class="container gridBg" >
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th class="column-filter">
                    @Html.DisplayNameFor(model => model.FirstNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SecondNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SumTotal)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
</div>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SumTotal)
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

