@model serie_fibonacci.Models.Fibonacci

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div class="container gridBgcrear">
    <h4>Fibonacci</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           <label>Nombre:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            <label>Fecha:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            <label>Primer Numero:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstNum)
        </dd>
        <dt class = "col-sm-2">
            <label>Segundo Numero:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecondNum)
        </dd>
        <dt class = "col-sm-2">
            <label>Suma Total:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SumTotal)
        </dd>
        <dt class="col-sm-2">
            <label>Serie de Numeros:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Serie)
        </dd>
    </dl>
    <br />
    <a asp-action="Index" class="btn btn-danger">Volver a la Lista</a>
</div>
